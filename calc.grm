$EXTERN
{
	'calc.lex.h',
};

$PRODUCTION
{
	<LineExp>	->	<LineExp> <E> NL
				|	<E> NL
				;

	<E>			->	<E> '+' <E>
				|	<E> '-' <E>
				|	<E> '*' <E>
				|	<E> '/' <E>
				|	<E> '%'	<E>
				|	'(' <E> ')'
				|	ID '=' <E>
				|	NUM
				|	ID
				;
};

$PRECEDENCE
{
	$RIGHT	( '='			,),
	$LEFT	( '+', '-'		,),
	$LEFT	( '*', '/', '%'	,),
};

$ALIAS
{
	(PLUS	=> '+'),
	(MINUS	=> '-'),
	(MUL	=> '*'),
	(DIV	=> '/'),
	(MOD	=> '%'),
	(LPAREN	=> '('),
	(RPAREN	=> ')'),
	(EQUAL	=> '='),
};
